
<GameOver>:
    opacity: 0
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.8
        Rectangle:
            size: self.size
    
    Label:
        font_name: "fonts/Sackers-Gothic-Std-Light.ttf"
        text: "Game Over"
        pos_hint: {"center_x": .5, "center_y": .7}
        size_hint: 0.9, 0.9
        font_size: self.size[1]/6
    
    Button:
        font_name: "fonts/Eurostile.ttf"
        text: "Retry"
        pos_hint: {"center_x": .5, "center_y": .3}
        size_hint: 0.1, 0.1
        font_size: self.height/2
        background_normal: ''
        background_color: .3, .4, 1, .85
        on_press: root.parent.retry_game()
    
    Button:
        font_name: "fonts/Eurostile.ttf"
        text: "Main Menu"
        pos_hint: {"center_x": .5, "center_y": .2}
        size_hint: 0.1, 0.1
        font_size: self.height/2.5
        background_normal: ''
        background_color: .3, .4, 1, .85
        on_press: root.parent.main_menu()
    
    Button:
        font_name: "fonts/Eurostile.ttf"
        text: "Quit"
        pos_hint: {"center_x": .5, "center_y": .1}
        size_hint: 0.1, 0.1
        font_size: self.height/2
        color: 0,0,0,1
        background_normal: ''
        background_color: 1, .3, .4, .85
        on_press: app.stop()